<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/navigation_chat_room_list">

    <fragment
        android:id="@+id/navigation_signin"
        android:name="com.sgs.devcamp2.flametalk_android.ui.signin.SigninFragment"
        android:label="Signin"
        tools:layout="@layout/fragment_signin">
        <action
            android:id="@+id/action_signin_to_home"
            app:destination="@id/navigation_home"
            app:popUpTo="@id/navigation_home" />

        <action
            android:id="@+id/action_signin_to_signup"
            app:destination="@id/navigation_signup"
            app:popUpTo="@id/navigation_signup" />
    </fragment>

    <fragment
        android:id="@+id/navigation_signup"
        android:name="com.sgs.devcamp2.flametalk_android.ui.signup.SignupFragment"
        android:label="Signup"
        tools:layout="@layout/fragment_signup">
        <action
            android:id="@+id/action_signup_to_signin"
            app:destination="@id/navigation_signin"
            app:popUpTo="@id/navigation_signin" />
    </fragment>

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.sgs.devcamp2.flametalk_android.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_home_to_profile"
            app:destination="@id/navigation_profile"
            app:popUpTo="@id/navigation_profile" />
        <action
            android:id="@+id/action_home_to_post"
            app:destination="@id/navigation_post"
            app:popUpTo="@id/navigation_post" />
    </fragment>

    <fragment
        android:id="@+id/navigation_post"
        android:name="com.sgs.devcamp2.flametalk_android.ui.post.PostFragment"
        android:label="Post"
        tools:layout="@layout/fragment_post">
        <action
            android:id="@+id/action_post_to_profile"
            app:destination="@id/navigation_profile"
            app:popUpTo="@id/navigation_profile" />
        <action
            android:id="@+id/action_post_to_home"
            app:destination="@+id/navigation_feed"
            app:popUpTo="@id/navigation_feed" />
    </fragment>

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.sgs.devcamp2.flametalk_android.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profile_to_post"
            app:destination="@id/navigation_post"
            app:popUpTo="@id/navigation_post" />
    </fragment>


    <fragment
        android:id="@+id/navigation_chat_room_list"
        android:name="com.sgs.devcamp2.flametalk_android.ui.chatroomlist.ChatRoomListFragment"
        android:label="ChatRoomlist"
        tools:layout="@layout/fragment_chat_room_list">
        <action
            android:id="@+id/action_navigation_chat_to_chatRoomFragment"
            app:destination="@id/navigation_chat_room" />
    </fragment>

    <fragment
        android:id="@+id/navigation_oauth"
        android:name="com.sgs.devcamp2.flametalk_android.ui.oauth.OAuthFragment"
        android:label="OAuth"
        tools:layout="@layout/fragment_o_auth"
        >
        <action
            android:id="@+id/action_chat_to_post"
            app:destination="@id/navigation_chat_room_list"
            app:popUpTo="@id/navigation_chat_room_list"/>
    </fragment>
    <fragment
        android:id="@+id/navigation_chat_room"
        android:name="com.sgs.devcamp2.flametalk_android.ui.chatroom.ChatRoomFragment"
        android:label="fragment_chat_room"
        tools:layout="@layout/fragment_chat_room" >
        <action
            android:id="@+id/action_chatRoomFragment_to_navigation_oauth"
            app:destination="@id/navigation_oauth" />
    </fragment>
    <fragment
        android:id="@+id/inviteRoomFragment"
        android:name="com.sgs.devcamp2.flametalk_android.ui.inviteroom.InviteRoomFragment"
        android:label="fragment_invite_room"
        tools:layout="@layout/fragment_invite_room" >
        <action
            android:id="@+id/action_inviteRoomFragment_to_navigation_chat_room_list2"
            app:destination="@id/navigation_chat_room_list" />
    </fragment>
    <fragment
        android:id="@+id/chatRoomTopSheetFragment"
        android:name="com.sgs.devcamp2.flametalk_android.ui.chatroomlist.ChatRoomTopSheetFragment"
        android:label="ChatRoomTopSheetFragment" >
        <action
            android:id="@+id/action_chatRoomTopSheetFragment_to_inviteRoomFragment"
            app:destination="@id/inviteRoomFragment" />
    </fragment>


</navigation>
