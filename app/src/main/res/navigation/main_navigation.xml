<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/navigation_signin">

    <fragment
        android:id="@+id/navigation_signin"
        android:name="com.sgs.devcamp2.flametalk_android.ui.signin.SigninFragment"
        android:label="Signin"
        tools:layout="@layout/fragment_signin">
        <action
            android:id="@+id/action_signin_to_home"
            app:destination="@id/navigation_home"
            app:popUpTo="@id/navigation_home" />

        <action
            android:id="@+id/action_signin_to_signup"
            app:destination="@id/navigation_signup"
            app:popUpTo="@id/navigation_signup" />
    </fragment>

    <fragment
        android:id="@+id/navigation_signup"
        android:name="com.sgs.devcamp2.flametalk_android.ui.signup.SignupFragment"
        android:label="Signup"
        tools:layout="@layout/fragment_signup">
        <action
            android:id="@+id/action_signup_to_signin"
            app:destination="@id/navigation_signin"
            app:popUpTo="@id/navigation_signin" />
    </fragment>

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.sgs.devcamp2.flametalk_android.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_home_to_profile"
            app:destination="@id/navigation_profile"
            app:popUpTo="@id/navigation_profile" />
        <action
            android:id="@+id/action_home_to_post"
            app:destination="@id/navigation_post"
            app:popUpTo="@id/navigation_post" />
    </fragment>

    <fragment
        android:id="@+id/navigation_post"
        android:name="com.sgs.devcamp2.flametalk_android.ui.post.PostFragment"
        android:label="Post"
        tools:layout="@layout/fragment_post">
        <action
            android:id="@+id/action_post_to_profile"
            app:destination="@id/navigation_profile"
            app:popUpTo="@id/navigation_profile" />
        <action
            android:id="@+id/action_post_to_home"
            app:destination="@+id/navigation_feed"
            app:popUpTo="@id/navigation_feed" />
    </fragment>

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.sgs.devcamp2.flametalk_android.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profile_to_post"
            app:destination="@id/navigation_post"
            app:popUpTo="@id/navigation_post" />
    </fragment>

</navigation>
