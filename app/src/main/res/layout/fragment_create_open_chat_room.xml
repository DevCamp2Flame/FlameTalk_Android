<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.createopenchatroom.CreateOpenChatRoom">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_invite_open_chat_room_menu"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="15dp">
        <ImageView
            android:id="@+id/iv_invite_open_chat_room_back"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_back_arrow_blue_34"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/tv_invite_open_chat_room_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toEndOf="@id/iv_invite_open_chat_room_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_invite_open_chat_room_submit"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="오픈 채팅방 만들기"/>
        <TextView
            android:id="@+id/tv_invite_open_chat_room_submit"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="완료"
            android:gravity="center"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_invite_open_chat_room_middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layout_invite_open_chat_room_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="15dp"
        >
        <ProgressBar
            android:id="@+id/pb_invite_open_chat_room_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@id/layout_invite_open_chat_room_text_input"/>

        <ImageView
            android:id="@+id/iv_invite_open_chat_room_background_img_select"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_button_gray_10"
            android:src="@drawable/ic_camera_24"
            android:translationZ="3dp"
            app:layout_constraintBottom_toTopOf="@id/layout_invite_open_chat_room_text_input"
            app:layout_constraintEnd_toEndOf="@+id/iv_invite_open_chat_room_background_img" />

        <ImageView
            android:id="@+id/iv_invite_open_chat_room_background_img"
            android:layout_width="150dp"
            android:layout_height="250dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_invite_open_chat_room_text_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterEnabled="true"
            app:counterMaxLength="50"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:layout_constraintTop_toBottomOf="@+id/iv_invite_open_chat_room_background_img">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_invite_open_chat_room_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="오픈채팅방 이름을 입력해 주세요."/>
        </com.google.android.material.textfield.TextInputLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/layout_invite_open_chat_room_middle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="15dp">
        <TextView
            android:id="@+id/tv_invite_open_chat_room_profile_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="프로필 설정"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_invite_open_chat_room_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_invite_open_chat_room_profile_title"/>





    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>