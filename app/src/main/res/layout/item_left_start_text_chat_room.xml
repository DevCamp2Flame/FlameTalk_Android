<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_chat_room">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_chat_room_image_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardElevation="0dp"
        app:cardCornerRadius="20dp"
        android:background="@drawable/bg_chat_list_round"
        >

        <ImageView
            android:id="@+id/iv_chat_room_user_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="4dp"
            android:scaleType="centerInside"
            android:src="@drawable/dummy"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"



            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_chat_room_text_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/layout_chat_room_image_container"
        android:layout_marginBottom="5dp"
        >

        <TextView
            android:id="@+id/tv_chat_room_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="김현국"
            android:textStyle="bold"
            android:textSize="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_chat_room_message_space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_chat_room_user_name"
            >
            <TextView
                android:id="@+id/tv_chat_room_message"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_chat_room_left_item"
                android:maxWidth="200dp"
                tools:text="가나다라마바사아가나다라마바사아가나다라마바사아가나다라마바사아가나다라마바사아"
                android:singleLine="false"
                android:textColor="@color/black"
                android:textSize="10dp"
                app:layout_constraintStart_toStartOf="parent"

                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_chat_room_user_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2"
            android:textColor="@color/flame_blue"
            android:textSize="7dp"
            app:layout_constraintStart_toEndOf="@id/layout_chat_room_message_space"
            app:layout_constraintBottom_toTopOf="@id/tv_chat_list_date"
            android:layout_marginBottom="2dp"
            android:layout_marginStart="2dp"
            />


        <TextView
            android:id="@+id/tv_chat_list_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            tools:text="오전 09시 30분"
            android:textSize="10dp"
            app:layout_constraintStart_toEndOf="@id/layout_chat_room_message_space"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="2dp"
             />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>